doctype html 
html(lang="ko")
    head  
        title #{pageTitle} | 웨튜브
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn 
                        li 
                            a(href="/logout") Log out
                        li 
                            a(href="/my-profile") #{loggedInUser.name} 의 프로필
                    else 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Log In    
                    li 
                        a(href="/search") Search
                    li 
                        a(href="/videos/upload") Upload Video
        main 
            block content
    include partials/footer